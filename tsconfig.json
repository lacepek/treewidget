{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "outDir": "./dist/",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
